{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\Compiled\\${fileBasenameNoExtension}.exe",
                "-I",
                "${workspaceFolder}\\Dependencies\\GLFW\\include\\GLFW",
                "-L",
                "${workspaceFolder}\\Dependencies\\GLFW\\lib-vc2019"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}